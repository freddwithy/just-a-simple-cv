generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Resume {
  id String @id @default(uuid())
  userId String
  user User[] @relation("ResumeToUser")
  name String
  lastName String
  city String
  shortResume String
  aboutMe String
  education Education[] @relation("ResumeToEducation")
  experience Experience[] @relation("ResumeToExperience")
  skill Skills[] @relation("ResumeToSkills")
  image Image[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id String @id @default(uuid())
  resumeId String
  resume Resume[] @relation("ResumeToUser")
  username String @unique
  email String @unique
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Education {
  id String @id @default(uuid())
  resume Resume[] @relation("ResumeToEducation")
  resumeId String
  entity String 
  certificate String
  initDate String
  endDate String
}

model Experience {
  id String @id @default(uuid())
  resume Resume[] @relation("ResumeToExperience")
  resumeId String
  company String 
  position String
  initDate String
  endDate String
}

model Skills {
  id String @id @default(uuid())
  resume Resume[] @relation("ResumeToSkills")
  resumeId String
  name String
}

model Image {
  id String @id @default(uuid())
  resumeId String
  resume Resume[]
  url String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}



